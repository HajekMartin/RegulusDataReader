{
    "name": "RegulusDataReader",
    "version": "0.0.1",
    "slug": "regulus_data_reader",
    "description": "Run a Python script as a Home Assistant add-on",
    "arch": [
        "armhf",
        "armv7",
        "amd64",
        "aarch64"
    ],
    "startup": "services",
    "boot": "auto",
    "options": {
        "script": "./main.py",
        "interval": 5
    },
    "schema": {
        "script": {
            "type": "string"
        },
        "interval": {
            "type": "integer"
        }
    },
    "services": [
        {
            "name": "python_script",
            "command": "python3 {{options.script}}",
            "interval": "{{options.interval}}"
        }
    ]
}